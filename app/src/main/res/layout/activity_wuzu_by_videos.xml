<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="islamapp.islamicapplication.Wuzu_by_videos">

    <VideoView
        android:id="@+id/video"
        android:layout_width="match_parent"
        android:layout_height="250dp"

        android:layout_marginTop="21dp"
        android:layout_below="@+id/button7"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button1"
        android:backgroundTint="@android:color/white"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_width="wrap_content"
        android:onClick="step1"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="13dp"
        android:text="Step 1" />

    <Button
        android:id="@+id/button2"
        android:onClick="Step2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button1"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@android:color/white"
        android:textColor="@android:color/holo_blue_dark"
        android:text="Step 2" />

    <Button
        android:id="@+id/button3"
        android:onClick="Step3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/button2"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@android:color/white"
        android:textColor="@android:color/holo_blue_dark"
        android:text="Step 3" />

    <Button
        android:id="@+id/button4"
        android:onClick="Step4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:backgroundTint="@android:color/white"
        android:textColor="@android:color/holo_blue_dark"
        android:text="Step 4"
        android:layout_below="@+id/button1"
        android:layout_alignStart="@+id/button1" />

    <Button
        android:id="@+id/button5"
        android:onClick="Step5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/white"
        android:textColor="@android:color/holo_blue_dark"
        android:text="Step 5"
        android:layout_alignBaseline="@+id/button4"
        android:layout_alignBottom="@+id/button4"
        android:layout_alignStart="@+id/button2" />

    <Button
        android:id="@+id/button6"
        android:onClick="Step6"
        android:layout_width="wrap_content"
        android:backgroundTint="@android:color/white"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button3"
        android:layout_alignTop="@+id/button5"
        android:text="Step 6" />

    <Button
        android:id="@+id/button7"
        android:onClick="Step7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/white"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_alignEnd="@+id/button4"
        android:layout_below="@+id/button4"
        android:layout_marginTop="35dp"
        android:text="Step 7" />

    <Button
        android:id="@+id/button8"
        android:onClick="Step8"
        android:layout_width="wrap_content"
        android:backgroundTint="@android:color/white"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button5"
        android:layout_alignTop="@+id/button7"
        android:text="Step 8" />

    <Button
        android:id="@+id/button9"
        android:onClick="Step9"
        android:layout_width="wrap_content"
        android:backgroundTint="@android:color/white"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button6"
        android:layout_alignTop="@+id/button8"
        android:text="Step 9" />

</RelativeLayout>
